# Environment variables for local testing
# Copy this file to .env and update the values
# These are only loaded when not running in AWS Lambda

# Feed Configuration
EXTERNAL_FEED_URL=https://your-wordpress-site.com
EXTERNAL_FEED_PLATFORM=wordpress
EXTERNAL_FEED_TYPE=article
EXTERNAL_FEED_SOURCE=denofgeeks
FEED_FILE_NAME=msn-feed.xml

# WordPress API Configuration (can be overridden in config files)
WP_API_TOKEN=your-wordpress-api-token
WP_API_POSTS_FILTER=topic
WP_API_POSTS_FILTER_VALUE=msn_article

# MSN Feed Configuration
SITE_NAME=Your Site Name
SITE_DESCRIPTION=Your site description for MSN feed
SITE_LANGUAGE=en-us
SITE_COPYRIGHT=Your Copyright Notice

# AWS Configuration
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name
CLOUDFRONT_DISTRIBUTION_ID=your-distribution-id

# Alternative AWS Configuration (shorter names)
AWS_S3_BUCKET=your-bucket-name
AWS_CLOUDFRONT_DISTRO=your-distribution-id

# Profanity Filter
PROFANITY_LIST_URL=https://raw.githubusercontent.com/cracked-simon/literally-profanity/refs/heads/main/final-list.json

# Database Configuration (MySQL)
DB_HOST=your-mysql-host
DB_PORT=3306
DB_NAME=msn_feed_db
DB_USER=your-mysql-user
DB_PASSWORD=your-mysql-password
DB_SSL=false

# Feed Generation Configuration
FEED_ITEMS_PER_RUN=5
FEED_MAX_TOTAL_ITEMS=20

# Optional: Config File Override
# CONFIG_FILE=configs/denofgeeks-articles.json
